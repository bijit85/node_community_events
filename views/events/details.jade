extends ../../layouts/default

block head
    title #{event.name}

block body
    .row
        .col-sm-4
            .page-header
                h1 #{event.name}
                    small &nbsp; Posted by #{event.username}
                ul.event-list
                    li
                        strong Venue:
                        | #{event.venue}
                    li
                        strong Date:
                        | #{event.date}
                    li
                        strong Start Time:
                        | #{event.startTime}
                    li
                        strong End Time:
                        | #{event.endTime}
                p #{event.description}
                p
                    i.fa.fa-arrow-circle-left
                    a(href='/events') Go Back

        .col-sm-4
            .page-header
                h1 Prestige Worldwide